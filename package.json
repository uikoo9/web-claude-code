{
  "name": "web-claude-code",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "author": "uikoo9 <uikoo9@qq.com>",
  "homepage": "https://github.com/uikoo9/web-claude-code#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uikoo9/web-claude-code.git"
  },
  "bugs": {
    "url": "https://github.com/uikoo9/web-claude-code/issues"
  },
  "scripts": {
    "prepare": "husky",
    "build": "lerna run build",
    "prettier": "qpro prettier",
    "eslint": "qpro eslint",
    "lint": "npm run build && npm run prettier && npm run eslint",
    "cz": "qpro commitizen",
    "pb": "lerna publish",
    "graph": "nx graph",
    "update": "qpro ncu u && npm --workspaces exec -- qpro ncu u",
    "pkg": "qpro pkg ./packages",
    "dpkg": "qpro pkg ./packages dev",
    "clean": "nx reset",
    "web:dev": "npm run dev --workspace=@webccc/cli-web",
    "web:build": "npm run build --workspace=@webccc/cli-web",
    "server:start": "npm run web:build && npm run start --workspace=@webccc/server",
    "cli:start": "npm run start --workspace=@webccc/cli",
    "index:dev": "npm run dev --workspace=@webccc/index",
    "index:build": "npm run build --workspace=@webccc/index",
    "index:start": "npm run start --workspace=@webccc/index",
    "online:dev": "npm run dev --workspace=@webccc/online-server",
    "online:start": "npm run start --workspace=@webccc/online-server"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lerna": "^9.0.3",
    "lint-staged": "^16.2.7",
    "nx": "^22.4.5",
    "qiao-project": "^5.0.6"
  }
}
